@model DogViewModel


<h1>Here you can add a new dog to the list</h1>
<hr />
<div class="row">
	<div class="row-cols-5">
	
		<div class="card">
			<div class="card-header">
				<h4>Add a new dog</h4>
			</div>

			<div class="card-body">
				<form asp-controller="HelloWorld" asp-action="CreateDog" method="post">

					<div class="mb-3"> 
				      <label class="form-label">Dog Name</label>
				      <input asp-for=Name type="text" class="form-control"/>
			       </div>

			       <div class="mb-3">
				      <label class="form-label">Dog Age</label>
				      <input asp-for=Age type="number" class="form-control"/>
			       </div>

				   <div class="mb-3">
					   <button type="submit" class="btn btn-primary">Submit</button>
				   </div>
		       </form>
			</div>

			<div class="card-footer">

			</div>
		</div>
	</div>
</div>